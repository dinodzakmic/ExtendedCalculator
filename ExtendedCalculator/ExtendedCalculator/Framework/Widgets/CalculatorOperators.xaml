<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExtendedCalculator.Framework.Widgets.CalculatorOperators" >
    
    <ContentView.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" BasedOn="{StaticResource OperandsButton}" />
        </ResourceDictionary>
    </ContentView.Resources>

  <StackLayout Orientation="Horizontal"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="End">
      <Button Text="+" Clicked="OperatorClicked" AutomationId="ADD" />
      <Button Text="-" Clicked="OperatorClicked" AutomationId="SUBTRACT" />
      <Button Text="×" Clicked="OperatorClicked" AutomationId="MULTIPLY" />
      <Button Text="÷" Clicked="OperatorClicked" AutomationId="DIVIDE" />
  </StackLayout>
  
</ContentView>
